@page
@model ContosoUniversity.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-5">
    <h1>Courses</h1>

    <p>
        <a asp-page="Create" class="btn btn-success">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Courses[0].CourseID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses[0].Credits)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses[0].Department)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Courses)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Credits)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.Name)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-page="./Edit" asp-route-id="@item.CourseID" class="btn btn-primary" style="margin: 10% 10% 10% 10% ;">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.CourseID" class="btn btn-info" style="margin: 10% 10% 10% 10%; ">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.CourseID" class="btn btn-danger" style="margin: 10% 10% 10% 10% ;"  >Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
